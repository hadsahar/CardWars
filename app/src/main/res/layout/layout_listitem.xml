<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="#CB123456"
    android:id="@+id/listitem_parent_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/listitem_img_Rank"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="TextView"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/listitem_lbl_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toEndOf="@id/listitem_img_Rank"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_marginStart="30dp"
        />

    <TextView
        android:id="@+id/listitem_lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toEndOf="@id/listitem_lbl_points"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_marginStart="30dp" />
</RelativeLayout>